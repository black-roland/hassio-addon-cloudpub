{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "cloudpub-canary/build.yaml$"
      ],
      "matchStrings": [
        "(aarch64|amd64|armhf|armv7|i386):\\s(?<depName>.*?):(?<currentValue>.*?)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "cloudpub-canary/Dockerfile$"
      ],
      "matchStrings": [
        "ARG CLO_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "custom.cloudpub",
      "depNameTemplate": "clo"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "cloudpub-canary/config.yaml$"
      ],
      "matchStrings": [
        "version:\\s*[\"']?(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)-[0-9][\"']?\\s+"
      ],
      "datasourceTemplate": "custom.cloudpub",
      "depNameTemplate": "clo"
    }
  ],
  "customDatasources": {
    "cloudpub": {
      "defaultRegistryUrlTemplate": "https://cloudpub.ru/docs",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "groupName": "Add-on base image",
      "automerge": true
    },
    {
      "matchPackageNames": ["clo"],
      "groupName": "CloudPub client version",
      "extractVersion": "/download/stable/clo-(?<version>.+)-stable-",
      "automerge": true
    }
  ]
}
