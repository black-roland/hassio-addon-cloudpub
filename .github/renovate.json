{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "cloudpub-canary/build.yaml$"
      ],
      "matchStrings": [
        "(aarch64|amd64|armhf|armv7|i386):\\s(?<depName>.*?):(?<currentValue>.*?)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "cloudpub-canary/Dockerfile$"
      ],
      "matchStrings": [
        "ARG CLO_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "custom.cloudpub",
      "depNameTemplate": "cloudpub",
      "extractVersionTemplate": "/clo-(?<version>.+)-stable-linux-x86_64\\.tar\\.gz"
    }
  ],
  "customDatasources": {
    "cloudpub": {
      "defaultRegistryUrlTemplate": "https://cloudpub.ru/docs",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Add-on base image"
    },
    {
      "matchDatasources": [
        "custom.cloudpub"
      ],
      "groupName": "CloudPub client version"
    }
  ]
}
